{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "buildCommand": "npm install --include=dev && npm run build",
        "watchPatterns": [
            "src/**",
            "package.json",
            "railway.json",
            "nixpacks.toml"
        ]
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}