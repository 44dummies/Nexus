{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "cd backend && npm install --include=dev && npm run build",
    "watchPatterns": [
      "backend/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}